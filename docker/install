#COnsideration 
# Use nginx pproxy to foreward headers
# set http to https in nginx config file 


# Set docker-compose file 

version: '3'

services:
  wordpress_db:
    image: mysql:5.7
    container_name: wordpress_db
    ports:
      - "3308:3306"
    volumes:
      - /mysql_data/database/wordpress/data:/var/lib/mysql
      - /mysql_data/database/wordpress/initdb.d:/docker-entrypoint-initdb.d
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: password # any random string will do
      MYSQL_DATABASE: wordpress # the name of your mysql database
      MYSQL_USER: user # the name of the database user
      MYSQL_PASSWORD: password # the password of the mysql user
    networks:
      wordpress:
        ipv4_address: 172.24.0.2
  wordpress_web:
    depends_on:
      - wordpress_db
    image: wordpress:php7.4 # we're using the image with php7.4
    container_name: wordpress
    ports:
      - "8080:80"
    restart: always
    links:
      - wordpress_db:mysql
    volumes:
      - /site_data/web/wordpress/src:/var/www/html
    networks:
      wordpress:
        ipv4_address: 172.24.0.4
  proxy_ssl:
    image: nginx:1.19.2-alpine
    container_name: proxy_ssl
    ports:
      - "443:443"
      - "80:80"
    volumes:
      - ./default.conf:/etc/nginx/conf.d/default.conf
      - /etc/letsencrypt/live/dand.info/fullchain.pem:/etc/letsencrypt/live/dand.info/fullchain.pem
      - /etc/letsencrypt/live/dand.info/privkey.pem:/etc/letsencrypt/live/dand.info/privkey.pem
    restart: always
    networks:
      - wordpress

networks:
  wordpress:
    driver: bridge
    ipam:
      driver: default
      config:
        - subnet: 172.24.0.0/24




# define rules in https foreward


# define in wordpress config 
<?php
define('FORCE_SSL_ADMIN', true); 

define('WP_HOME','https://example.org');
define('WP_SITEURL','https://example.org');

if (strpos($_SERVER['HTTP_X_FORWARDED_PROTO'], 'https') !== false)
       $_SERVER['HTTPS']='on';




# apply redirect 

server {
    listen 80;

    server_name dand.info www.dand.info;
    return 301 https://dand.info$request_uri;
}


server {
    listen              443 ssl;
    server_name         dand.info;
    ssl_certificate     /etc/letsencrypt/live/dand.info/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/dand.info/privkey.pem;
    ssl_protocols       TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers         HIGH:!aNULL:!MD5;
    client_max_body_size 100M;
    gzip on;
    location / {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header   X-Forwarded-Proto https;	
    proxy_set_header Host $host;
    proxy_pass http://172.24.0.4;

    }


     location ~ /\.ht {
            deny all;
    }
}

